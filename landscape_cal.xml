<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextRow"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/StringEdit"
            android:background="#e2e2e9"/>



    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/CalculatorGrid"
        android:layout_margin="8dp"
        android:background="#ffffff"
        android:layout_below="@+id/TextRow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:orientation="vertical">

            <!--Row One-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/RowOne"

                android:orientation="horizontal"
                android:layout_margin="8dp"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="1"
                    android:id="@+id/Button1"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="2"
                    android:id="@+id/Button2"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="3"
                    android:id="@+id/Button3"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#11d4d4"
                    android:text="+"
                    android:id="@+id/ButtonAdd"
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:layout_weight="0.25"/>

            </LinearLayout>


            <!--Row Two-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/RowTwo"
                android:layout_below="@+id/RowOne"
                android:layout_margin="4dp"
                android:layout_weight="0.2"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"
                    android:background="#eeeeee"
                    android:text="4"
                    android:textSize="15sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="5"
                    android:id="@+id/Button5"
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="6"
                    android:id="@+id/Button6"
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#11d4d4"
                    android:text="-"
                    android:id="@+id/ButtonSubtract"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

            </LinearLayout>

            <!--Row Three-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/RowThree"
                android:layout_below="@+id/RowTwo"
                android:layout_margin="4dp"

                android:orientation="horizontal"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="7"
                    android:id="@+id/Button7"
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="8"
                    android:id="@+id/Button8"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="9"
                    android:id="@+id/Button9"
                    android:layout_margin="8dp"
                    android:textSize="15sp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#11d4d4"
                    android:text="*"
                    android:id="@+id/ButtonMultiply"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"
                    android:textSize="15sp"/>

            </LinearLayout>

            <!--Row Four-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/RowFour"
                android:layout_below="@+id/RowThree"
                android:layout_margin="4dp"

                android:orientation="horizontal"
                android:layout_weight="0.2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="."
                    android:id="@+id/ButtonDot"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="0"
                    android:id="@+id/Button0"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:text="CE"

                    android:id="@+id/ButtonClear"
                    android:textSize="15sp"
                    android:layout_margin="8dp"
                    android:layout_weight="0.25"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#11d4d4"
                    android:text="/"
                    android:id="@+id/ButtonDivide"
                    android:textSize="15sp"
                    android:layout_margin="8dp"

                    android:layout_weight="0.25"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RowFour"
                android:background="#d9d9d9"
                android:text="Answer"
                android:layout_margin="4dp"
                android:padding="2dp"
                android:id="@+id/ButtonEquals"
                android:layout_weight="0.2"/>
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>